@model TopDriveX.Application.Dtos.VehicleDto

@{
    ViewData["Title"] = $"{Model.MakeName} {Model.ModelName} {Model.Year}";
}

<div class="bg-gray-50 min-h-screen py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Back Button -->
        <div class="mb-6">
            <a asp-action="Index" class="inline-flex items-center text-gray-600 hover:text-primary transition">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Обратно към обявите
            </a>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

            <!-- Left Column - Images & Details -->
            <div class="lg:col-span-2 space-y-6">

                <!-- Images -->
                <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                    @if (Model.Images != null && Model.Images.Any())
                    {
                        <!-- Main Image -->
                        <div class="relative h-96 bg-gray-200">
                            <img id="mainImage" src="@Model.Images.First()"
                                 alt="@Model.MakeName @Model.ModelName"
                                 class="w-full h-full object-contain"
                                 onerror="this.src='/images/no-image.png'">
                        </div>

                        <!-- Thumbnails -->
                        @if (Model.Images.Count > 1)
                        {
                            <div class="p-4 bg-gray-50 border-t border-gray-200">
                                <div class="grid grid-cols-5 gap-2">
                                    @foreach (var img in Model.Images.Take(10))
                                    {
                                        <button type="button"
                                                onclick="document.getElementById('mainImage').src='@img'"
                                                class="aspect-square rounded-lg overflow-hidden border-2 border-gray-200 hover:border-primary transition">
                                            <img src="@img" class="w-full h-full object-cover" onerror="this.src='/images/no-image.png'">
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="h-96 flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200">
                            <div class="text-center">
                                <svg class="w-24 h-24 mx-auto text-gray-400 mb-4" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                                </svg>
                                <p class="text-gray-500">Няма налични снимки</p>
                            </div>
                        </div>
                    }
                </div>

                <!-- Vehicle Details -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6 pb-3 border-b border-gray-100">
                        Технически характеристики
                    </h2>

                    <div class="grid grid-cols-2 md:grid-cols-3 gap-6">

                        <!-- Year -->
                        <div>
                            <div class="text-sm text-gray-500 mb-1">Година</div>
                            <div class="font-semibold text-gray-900">@Model.Year</div>
                        </div>

                        <!-- Mileage -->
                        <div>
                            <div class="text-sm text-gray-500 mb-1">Пробег</div>
                            <div class="font-semibold text-gray-900">@Model.Mileage.ToString("N0") км</div>
                        </div>

                        <!-- Fuel Type -->
                        <div>
                            <div class="text-sm text-gray-500 mb-1">Гориво</div>
                            <div class="font-semibold text-gray-900">
                                @switch (Model.FuelType)
                                {
                                    case "Petrol":
                                        <text>Бензин</text>
                                        ; break;
                                    case "Diesel":
                                        <text>Дизел</text>
                                        ; break;
                                    case "Electric":
                                        <text>Електричество</text>
                                        ; break;
                                    case "Hybrid":
                                        <text>Хибрид</text>
                                        ; break;
                                    case "PlugInHybrid":
                                        <text>Plug-in хибрид</text>
                                        ; break;
                                    case "LPG":
                                        <text>ГАЗ (LPG)</text>
                                        ; break;
                                    case "CNG":
                                        <text>CNG</text>
                                        ; break;
                                    default:
                                        <text>@Model.FuelType</text>
                                        ; break;
                                }
                            </div>
                        </div>

                        <!-- Transmission -->
                        <div>
                            <div class="text-sm text-gray-500 mb-1">Скоростна кутия</div>
                            <div class="font-semibold text-gray-900">
                                @switch (Model.TransmissionType)
                                {
                                    case "Manual":
                                        <text>Ръчна</text>
                                        ; break;
                                    case "Automatic":
                                        <text>Автоматична</text>
                                        ; break;
                                    case "SemiAutomatic":
                                        <text>Полуавтоматична</text>
                                        ; break;
                                    case "CVT":
                                        <text>CVT</text>
                                        ; break;
                                    default:
                                        <text>@Model.TransmissionType</text>
                                        ; break;
                                }
                            </div>
                        </div>

                        <!-- Color -->
                        @if (!string.IsNullOrEmpty(Model.Color))
                        {
                            <div>
                                <div class="text-sm text-gray-500 mb-1">Цвят</div>
                                <div class="font-semibold text-gray-900">@Model.Color</div>
                            </div>
                        }

                        <!-- City -->
                        <div>
                            <div class="text-sm text-gray-500 mb-1">Град</div>
                            <div class="font-semibold text-gray-900">@Model.City</div>
                        </div>

                    </div>
                </div>

            </div>

            <!-- Right Column - Price & Contact -->
            <div class="lg:col-span-1 space-y-6">

                <!-- Title & Price Card -->
                <div class="bg-white rounded-xl shadow-lg p-6 sticky top-4">
                    <h1 class="text-2xl font-bold text-gray-900 mb-4">
                        @Model.MakeName @Model.ModelName
                    </h1>

                    <!-- Price -->
                    <div class="bg-gradient-to-br from-primary to-secondary text-white rounded-xl p-6 mb-6">
                        <div class="text-sm font-medium mb-1">Цена</div>
                        <div class="text-4xl font-bold">@Model.Price.ToString("N0") лв</div>
                    </div>

                    <!-- Contact Button -->
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <button onclick="alert('Тази функционалност скоро ще бъде налична!')"
                                class="w-full bg-green-600 hover:bg-green-700 text-white py-4 rounded-lg font-bold text-lg transition shadow-md flex items-center justify-center mb-3">
                            <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                            </svg>
                            Покажи телефон
                        </button>

                        <!-- Favorite Button -->
                        <button onclick="alert('Тази функционалност скоро ще бъде налична!')"
                                class="w-full border-2 border-gray-300 hover:border-primary text-gray-700 hover:text-primary py-3 rounded-lg font-semibold transition flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                            </svg>
                            Запази в любими
                        </button>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login"
                           class="w-full block bg-green-600 hover:bg-green-700 text-white py-4 rounded-lg font-bold text-lg transition shadow-md text-center mb-3">
                            <svg class="w-6 h-6 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                            </svg>
                            Влез за контакт
                        </a>
                    }

                    <!-- Quick Stats -->
                    <div class="grid grid-cols-2 gap-3 mt-6 pt-6 border-t border-gray-100">
                        <div class="text-center">
                            <div class="text-2xl font-bold text-primary">@Model.Year</div>
                            <div class="text-xs text-gray-500">Година</div>
                        </div>
                        <div class="text-center">
                            <div class="text-2xl font-bold text-primary">@((Model.Mileage / 1000).ToString("N0"))k</div>
                            <div class="text-xs text-gray-500">км пробег</div>
                        </div>
                    </div>
                </div>

                <!-- Safety Notice -->
                <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
                    <div class="flex items-start">
                        <svg class="w-5 h-5 text-blue-600 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                        </svg>
                        <div class="text-sm text-blue-900">
                            <p class="font-semibold mb-1">Съвети за безопасност</p>
                            <ul class="text-xs space-y-1 text-blue-800">
                                <li>• Проверете автомобила на живо</li>
                                <li>• Не плащайте без оглед</li>
                                <li>• Проверете документите</li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>
