@using TopDriveX.Application.Contracts
@model IEnumerable<VehicleListDto>
@inject IMakeService MakeService
@{
    ViewData["Title"] = "Обяви за автомобили";
    var makes = await MakeService.GetAllMakesAsync();
    var cities = new[] { "Sofia", "Plovdiv", "Varna", "Burgas", "Rousse", "Stara Zagora" };

    var totalVehicles = ViewBag.TotalVehicles ?? 0;
    var currentPage = ViewBag.CurrentPage ?? 1;
    var pageSize = ViewBag.PageSize ?? 12;
    var totalPages = (int)Math.Ceiling((double)totalVehicles / pageSize);
}

<div class="bg-gradient-to-r from-red-600 to-red-800 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-5xl font-bold mb-4">Всички обяви за автомобили</h1>
        <p class="text-xl text-red-100">Намерени: <span class="font-bold">@totalVehicles</span> автомобила</p>
    </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">

        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-lg p-6 sticky top-4 border border-gray-100">
                <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                    <span class="mr-2">🔍</span> Филтри
                </h2>

                <form method="get" asp-action="Index">
                    <div class="mb-6">
                        <label class="block text-gray-700 font-semibold mb-2 text-sm">Марка</label>
                        <select name="makeId" class="w-full px-4 py-3 border-2 border-gray-100 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 outline-none transition">
                            <option value="">Всички марки</option>
                            @foreach (var make in makes.OrderBy(m => m.Name))
                            {
                                <option value="@make.Id" selected="@(ViewBag.MakeId?.ToString() == make.Id.ToString())">@make.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-6">
                        <label class="block text-gray-700 font-semibold mb-2 text-sm">Град</label>
                        <select name="city" class="w-full px-4 py-3 border-2 border-gray-100 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 outline-none transition">
                            <option value="">Всички градове</option>
                            @foreach (var city in cities)
                            {
                                <option value="@city" selected="@(ViewBag.City == city)">@city</option>
                            }
                        </select>
                    </div>

                    <div class="space-y-3">
                        <button type="submit" class="w-full bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 font-bold transition shadow-lg shadow-red-200">
                            Приложи филтри
                        </button>
                        <a asp-action="Index" class="block w-full bg-gray-100 text-gray-600 px-6 py-3 rounded-lg hover:bg-gray-200 font-semibold transition text-center text-sm">
                            Изчисти
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="lg:col-span-3">

            @if (Model.Any())
            {
                <div id="vehiclesGrid" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                    @foreach (var vehicle in Model)
                    {
                        <div class="vehicle-card bg-white rounded-xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100 group">
                            <div class="relative h-48 overflow-hidden">
                                <img src="@(vehicle.MainImage ?? "https://placehold.co/400x300/red/white?text=Car")"
                                     alt="@vehicle.MakeName @vehicle.ModelName"
                                     class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                                <div class="absolute top-3 right-3 bg-black/50 backdrop-blur-md text-white px-3 py-1 rounded-full text-xs font-bold">
                                    @vehicle.Year г.
                                </div>
                            </div>
                            <div class="p-5">
                                <h3 class="text-lg font-bold text-gray-900 mb-1">@vehicle.MakeName @vehicle.ModelName</h3>
                                <p class="text-gray-500 text-xs mb-4 flex items-center">
                                    <span class="mr-1">📍</span> @vehicle.City
                                </p>

                                <div class="grid grid-cols-2 gap-2 mb-4">
                                    <div class="bg-gray-50 p-2 rounded-lg text-center">
                                        <p class="text-[10px] uppercase text-gray-400 font-bold">Пробег</p>
                                        <p class="text-sm font-bold text-gray-700">@vehicle.Mileage.ToString("N0") км</p>
                                    </div>
                                    <div class="bg-gray-50 p-2 rounded-lg text-center">
                                        <p class="text-[10px] uppercase text-gray-400 font-bold">Година</p>
                                        <p class="text-sm font-bold text-gray-700">@vehicle.Year</p>
                                    </div>
                                </div>

                                <div class="border-t border-gray-100 pt-4 flex justify-between items-center">
                                    <p class="text-xl font-black text-red-600">@vehicle.Price.ToString("N0") лв</p>
                                    <a asp-action="Details" asp-route-id="@vehicle.Id"
                                       class="bg-gray-900 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition text-sm font-bold shadow-md">
                                        Детайли
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                @if (totalPages > 1)
                {
                    <div class="mt-12 flex flex-col sm:flex-row items-center justify-between border-t border-gray-100 pt-8">
                        <div class="text-sm text-gray-500 mb-4 sm:mb-0">
                            Показани <span class="font-bold text-gray-900">@((currentPage - 1) * pageSize + 1)</span> -
                            <span class="font-bold text-gray-900">@Math.Min(currentPage * pageSize, totalVehicles)</span>
                            от <span class="font-bold text-gray-900">@totalVehicles</span>
                        </div>

                        <nav class="flex space-x-1">
                            @if (currentPage > 1)
                            {
                                <a asp-action="Index"
                                   asp-route-page="@(currentPage - 1)"
                                   asp-route-makeId="@ViewBag.MakeId"
                                   asp-route-city="@ViewBag.City"
                                   class="px-3 py-2 border border-gray-200 rounded-lg text-gray-600 hover:bg-red-600 hover:text-white transition">
                                    &laquo;
                                </a>
                            }

                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <a asp-action="Index"
                                   asp-route-page="@i"
                                   asp-route-makeId="@ViewBag.MakeId"
                                   asp-route-city="@ViewBag.City"
                                   class="px-4 py-2 border rounded-lg text-sm font-bold transition @(i == currentPage ? "bg-red-600 border-red-600 text-white shadow-lg shadow-red-200" : "border-gray-200 text-gray-600 bg-white hover:bg-gray-50")">
                                    @i
                                </a>
                            }

                            @if (currentPage < totalPages)
                            {
                                <a asp-action="Index"
                                   asp-route-page="@(currentPage + 1)"
                                   asp-route-makeId="@ViewBag.MakeId"
                                   asp-route-city="@ViewBag.City"
                                   class="px-3 py-2 border border-gray-200 rounded-lg text-gray-600 hover:bg-red-600 hover:text-white transition">
                                    &raquo;
                                </a>
                            }
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="bg-white rounded-xl shadow-lg p-16 text-center border border-gray-100">
                    <div class="text-6xl mb-4">🚗💨</div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">Няма намерени автомобили</h3>
                    <p class="text-gray-500 mb-6">Опитайте да промените критериите за търсене</p>
                    <a asp-action="Index" class="inline-block bg-red-600 text-white px-8 py-3 rounded-lg hover:bg-red-700 font-bold transition shadow-lg">
                        Изчисти филтрите
                    </a>
                </div>
            }
        </div>
    </div>
</div>