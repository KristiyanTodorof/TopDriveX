@model TopDriveX.Application.Dtos.UserSettingsDto

@{
    ViewData["Title"] = "Настройки";
}

<div class="bg-gray-50 min-h-screen py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Настройки на профила</h1>
            <p class="text-gray-600 mt-2">Управлявай личната си информация и предпочитания</p>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                @TempData["Error"]
            </div>
        }

        <form asp-action="Settings" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserName" />
            <input type="hidden" asp-for="UserType" />
            <input type="hidden" asp-for="CreatedAt" />

            <!-- Personal Information -->
            <div class="bg-white rounded-xl shadow-lg p-8 mb-6">
                <h2 class="text-xl font-bold text-gray-900 mb-6 pb-3 border-b border-gray-100">
                    👤 Лична информация
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                    <!-- First Name -->
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-2">Име *</label>
                        <input asp-for="FirstName" type="text"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition">
                        <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Last Name -->
                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-2">Фамилия *</label>
                        <input asp-for="LastName" type="text"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition">
                        <span asp-validation-for="LastName" class="text-sm text-red-500"></span>
                    </div>

                    <!-- Email (read-only) -->
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">Имейл *</label>
                        <input asp-for="Email" type="email" readonly
                               class="w-full px-4 py-3 border border-gray-200 rounded-lg bg-gray-50 text-gray-500 cursor-not-allowed">
                        <p class="text-xs text-gray-500 mt-1">Имейлът не може да бъде променян</p>
                    </div>

                    <!-- Phone -->
                    <div>
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2">Телефон</label>
                        <input asp-for="PhoneNumber" type="tel" placeholder="+359 888 123 456"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition">
                        <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                    </div>

                </div>
            </div>

            <!-- Notification Preferences -->
            <div class="bg-white rounded-xl shadow-lg p-8 mb-6">
                <h2 class="text-xl font-bold text-gray-900 mb-6 pb-3 border-b border-gray-100">
                    🔔 Известия
                </h2>

                <div class="space-y-4">

                    <label class="flex items-start cursor-pointer group">
                        <input asp-for="EmailNotificationsMessages" type="checkbox"
                               class="mt-1 w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary">
                        <div class="ml-3">
                            <p class="text-sm font-medium text-gray-900 group-hover:text-primary transition">
                                Имейл известия за нови съобщения
                            </p>
                            <p class="text-xs text-gray-500">Получавай имейл, когато някой ти изпрати съобщение</p>
                        </div>
                    </label>

                    <label class="flex items-start cursor-pointer group">
                        <input asp-for="EmailNotificationsComments" type="checkbox"
                               class="mt-1 w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary">
                        <div class="ml-3">
                            <p class="text-sm font-medium text-gray-900 group-hover:text-primary transition">
                                Имейл известия за нови коментари
                            </p>
                            <p class="text-xs text-gray-500">Получавай имейл при коментари под твоите обяви</p>
                        </div>
                    </label>

                    <label class="flex items-start cursor-pointer group">
                        <input asp-for="EmailNotificationsPriceChanges" type="checkbox"
                               class="mt-1 w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary">
                        <div class="ml-3">
                            <p class="text-sm font-medium text-gray-900 group-hover:text-primary transition">
                                Промени в цената на любими обяви
                            </p>
                            <p class="text-xs text-gray-500">Получавай известие, когато цената на запазена обява се промени</p>
                        </div>
                    </label>

                    <label class="flex items-start cursor-pointer group">
                        <input asp-for="SmsNotifications" type="checkbox"
                               class="mt-1 w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary">
                        <div class="ml-3">
                            <p class="text-sm font-medium text-gray-900 group-hover:text-primary transition">
                                SMS известия за важни съобщения
                            </p>
                            <p class="text-xs text-gray-500">Получавай SMS за спешни съобщения</p>
                        </div>
                    </label>

                </div>
            </div>

            <!-- Privacy Settings -->
            <div class="bg-white rounded-xl shadow-lg p-8 mb-6">
                <h2 class="text-xl font-bold text-gray-900 mb-6 pb-3 border-b border-gray-100">
                    🔒 Поверителност
                </h2>

                <div class="space-y-4">

                    <label class="flex items-start cursor-pointer group">
                        <input asp-for="ShowPhonePublicly" type="checkbox"
                               class="mt-1 w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary">
                        <div class="ml-3">
                            <p class="text-sm font-medium text-gray-900 group-hover:text-primary transition">
                                Покажи телефонния номер публично
                            </p>
                            <p class="text-xs text-gray-500">Потребителите ще виждат твоя телефон в обявите</p>
                        </div>
                    </label>

                    <label class="flex items-start cursor-pointer group">
                        <input asp-for="ShowEmailPublicly" type="checkbox"
                               class="mt-1 w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary">
                        <div class="ml-3">
                            <p class="text-sm font-medium text-gray-900 group-hover:text-primary transition">
                                Покажи имейла публично
                            </p>
                            <p class="text-xs text-gray-500">Потребителите ще виждат твоя имейл в обявите</p>
                        </div>
                    </label>

                    <label class="flex items-start cursor-pointer group">
                        <input asp-for="AllowDirectMessages" type="checkbox"
                               class="mt-1 w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary">
                        <div class="ml-3">
                            <p class="text-sm font-medium text-gray-900 group-hover:text-primary transition">
                                Позволи директни съобщения
                            </p>
                            <p class="text-xs text-gray-500">Потребителите ще могат да ти пишат чрез системата</p>
                        </div>
                    </label>

                </div>
            </div>

            <!-- Account Info -->
            <div class="bg-white rounded-xl shadow-lg p-8 mb-6">
                <h2 class="text-xl font-bold text-gray-900 mb-6 pb-3 border-b border-gray-100">
                    ℹ️ Информация за акаунта
                </h2>

                <div class="space-y-4">
                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                        <div>
                            <p class="font-semibold text-gray-900">Тип акаунт</p>
                            <p class="text-sm text-gray-600">@Model.UserType</p>
                        </div>
                        <span class="bg-blue-100 text-blue-800 text-xs px-3 py-1 rounded-full font-semibold">
                            @Model.UserType
                        </span>
                    </div>

                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                        <div>
                            <p class="font-semibold text-gray-900">Потребителско име</p>
                            <p class="text-sm text-gray-600">@Model.UserName</p>
                        </div>
                    </div>

                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                        <div>
                            <p class="font-semibold text-gray-900">Регистриран на</p>
                            <p class="text-sm text-gray-600">@Model.CreatedAt.ToString("dd.MM.yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Password Change -->
            <div class="bg-white rounded-xl shadow-lg p-8 mb-6">
                <h2 class="text-xl font-bold text-gray-900 mb-6 pb-3 border-b border-gray-100">
                    🔑 Смяна на парола
                </h2>

                <button type="button" onclick="showPasswordModal()"
                        class="inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-900 rounded-lg font-semibold transition">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                    </svg>
                    Промени паролата
                </button>
            </div>

            <!-- Save Button -->
            <div class="flex gap-4">
                <button type="submit"
                        class="flex-1 bg-primary hover:bg-secondary text-white py-4 rounded-lg font-bold text-lg transition shadow-md">
                    💾 Запази промените
                </button>
                <a asp-action="Profile"
                   class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-900 py-4 rounded-lg font-bold text-lg transition text-center">
                    Отказ
                </a>
            </div>

        </form>

        <!-- Danger Zone -->
        <div class="mt-8 bg-red-50 border border-red-200 rounded-xl p-6">
            <h3 class="text-lg font-bold text-red-900 mb-2">⚠️ Опасна зона</h3>
            <p class="text-sm text-red-700 mb-4">
                Изтриването на акаунта е необратимо действие. Всички твои обяви и данни ще бъдат изтрити завинаги.
            </p>
            <button type="button" onclick="showDeleteModal()"
                    class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg font-semibold transition text-sm">
                Изтрий акаунта
            </button>
        </div>

    </div>
</div>

<!-- Change Password Modal -->
<div id="passwordModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-md w-full p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Смяна на парола</h3>

        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken()

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Текуща парола</label>
                    <input type="password" name="currentPassword" required
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Нова парола</label>
                    <input type="password" name="newPassword" required minlength="6"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Потвърди новата парола</label>
                    <input type="password" name="confirmPassword" required minlength="6"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary">
                </div>
            </div>

            <div class="flex gap-3 mt-6">
                <button type="submit" class="flex-1 bg-primary hover:bg-secondary text-white py-3 rounded-lg font-semibold transition">
                    Промени
                </button>
                <button type="button" onclick="hidePasswordModal()"
                        class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-900 py-3 rounded-lg font-semibold transition">
                    Отказ
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Delete Account Modal -->
<div id="deleteModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-md w-full p-8">
        <h3 class="text-2xl font-bold text-red-900 mb-4">Изтриване на акаунт</h3>
        <p class="text-gray-700 mb-6">
            Сигурни ли сте, че искате да изтриете акаунта си? <strong>Това действие е необратимо!</strong>
        </p>

        <form asp-action="DeleteAccount" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Потвърдете с парола</label>
                <input type="password" name="password" required
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500">
            </div>

            <div class="flex gap-3">
                <button type="submit" class="flex-1 bg-red-600 hover:bg-red-700 text-white py-3 rounded-lg font-semibold transition">
                    Изтрий завинаги
                </button>
                <button type="button" onclick="hideDeleteModal()"
                        class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-900 py-3 rounded-lg font-semibold transition">
                    Отказ
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function showPasswordModal() {
            document.getElementById('passwordModal').classList.remove('hidden');
        }
        function hidePasswordModal() {
            document.getElementById('passwordModal').classList.add('hidden');
        }
        function showDeleteModal() {
            document.getElementById('deleteModal').classList.remove('hidden');
        }
        function hideDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
        }
    </script>
}
