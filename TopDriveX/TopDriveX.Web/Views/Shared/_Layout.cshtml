<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TopDriveX</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#dc2626',
                        secondary: '#991b1b',
                        headerGray: '#FCFCFC',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

    <!-- Navigation -->
    <nav class="shadow-lg sticky top-0 z-50" style="background-color: #FCFCFC;">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                <!-- Logo - Left -->
                <div class="flex items-center">
                    <a asp-controller="Home" asp-action="Index" class="flex items-center">
                        <img src="~/images/logo.png" alt="TopDriveX Logo" class="h-16 w-auto">
                    </a>
                </div>

                <!-- Navigation Links - Center -->
                <div class="absolute left-1/2 transform -translate-x-1/2 flex items-center space-x-8">
                    <a asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-red-600 font-medium transition">
                        Начало
                    </a>
                    <a asp-controller="Makes" asp-action="Index" class="text-gray-700 hover:text-red-600 font-medium transition">
                        Марки
                    </a>
                    <a asp-controller="Vehicles" asp-action="Index" class="text-gray-700 hover:text-red-600 font-medium transition">
                        Обяви
                    </a>
                    <a asp-controller="Home" asp-action="About" class="text-gray-700 hover:text-red-600 font-medium transition">
                        За нас
                    </a>
                    <a asp-controller="Home" asp-action="Contact" class="text-gray-700 hover:text-red-600 font-medium transition">
                        Контакти
                    </a>
                </div>

                <!-- Right Side - Auth or Add Listing -->
                <div class="flex items-center space-x-4">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- User Menu -->
                        <div class="relative group">
                            <button class="flex items-center space-x-2 text-gray-700 hover:text-red-600 font-medium transition">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                                </svg>
                                <span>@User.Identity.Name</span>
                                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                                </svg>
                            </button>

                            <!-- Dropdown Menu -->
                            <div class="hidden group-hover:block absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-xl py-2">
                                <a asp-controller="Dashboard" asp-action="Index" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition">
                                    📊 Моят профил
                                </a>
                                <a asp-controller="Dashboard" asp-action="MyAds" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition">
                                    📝 Моите обяви
                                </a>
                                <a asp-controller="Dashboard" asp-action="Favorites" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition">
                                    ❤️ Любими
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <hr class="my-2">
                                    <a asp-controller="Admin" asp-action="Index" class="block px-4 py-2 text-red-600 hover:bg-red-50 font-semibold transition">
                                        👑 Админ панел
                                    </a>
                                }
                                <hr class="my-2">
                                <a asp-controller="Dashboard" asp-action="Settings" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition">
                                    ⚙️ Настройки
                                </a>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="block">
                                    <button type="submit" class="w-full text-left px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 transition">
                                        🚪 Изход
                                    </button>
                                </form>
                            </div>
                        </div>

                        <a asp-controller="Vehicles" asp-action="Create" class="bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 font-semibold transition">
                            + Добави обява
                        </a>
                    }
                    else
                    {
                        <!-- Login/Register -->
                        <a asp-controller="Account" asp-action="Login" class="text-gray-700 hover:text-red-600 font-medium transition">
                            Вход
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 font-semibold transition">
                            Регистрация
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- TempData Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
            <div class="bg-green-50 border border-green-200 text-green-800 rounded-lg p-4 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span>@TempData["Success"]</span>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
            <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
                <span>@TempData["Error"]</span>
            </div>
        </div>
    }

    <!-- Main Content -->
    <main class="flex-grow">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white mt-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Main Footer Content -->
            <div class="py-10">
                <!-- Logo and Description - Centered -->
                <div class="text-center mb-8">
                    <p class="text-gray-400 text-sm max-w-xl mx-auto">
                        Вашият надежден партньор за намиране и продажба на автомобили в България.
                    </p>
                </div>

                <!-- Navigation Links - Centered -->
                <div class="flex justify-center space-x-6 mb-8 flex-wrap text-sm">
                    <a asp-controller="Home" asp-action="Index" class="text-gray-400 hover:text-red-500 transition">
                        Начало
                    </a>
                    <a asp-controller="Vehicles" asp-action="Index" class="text-gray-400 hover:text-red-500 transition">
                        Обяви
                    </a>
                    <a asp-controller="Makes" asp-action="Index" class="text-gray-400 hover:text-red-500 transition">
                        Марки
                    </a>
                    <a asp-controller="Home" asp-action="About" class="text-gray-400 hover:text-red-500 transition">
                        За нас
                    </a>
                    <a asp-controller="Home" asp-action="Contact" class="text-gray-400 hover:text-red-500 transition">
                        Контакти
                    </a>
                </div>

                <!-- Contact Info - Inline -->
                <div class="flex justify-center space-x-8 mb-6 flex-wrap text-sm text-gray-400">
                    <span class="flex items-center">
                        <span class="mr-2">📍</span> Тутракан, България
                    </span>
                    <span class="flex items-center">
                        <span class="mr-2">📞</span> +359 888 916 060
                    </span>
                    <span class="flex items-center">
                        <span class="mr-2">✉️</span> info@topdrivex.bg
                    </span>
                </div>

                <!-- Social Media - Centered -->
                <div class="flex justify-center space-x-3">
                    <a href="#" class="bg-gray-800 hover:bg-red-600 w-9 h-9 rounded-full flex items-center justify-center transition">
                        <span class="text-lg">📘</span>
                    </a>
                    <a href="#" class="bg-gray-800 hover:bg-red-600 w-9 h-9 rounded-full flex items-center justify-center transition">
                        <span class="text-lg">📷</span>
                    </a>
                    <a href="#" class="bg-gray-800 hover:bg-red-600 w-9 h-9 rounded-full flex items-center justify-center transition">
                        <span class="text-lg">🐦</span>
                    </a>
                    <a href="#" class="bg-gray-800 hover:bg-red-600 w-9 h-9 rounded-full flex items-center justify-center transition">
                        <span class="text-lg">▶️</span>
                    </a>
                </div>
            </div>

            <!-- Bottom Bar -->
            <div class="border-t border-gray-800 py-4">
                <div class="flex flex-col md:flex-row justify-between items-center text-xs text-gray-400">
                    <p class="mb-2 md:mb-0">
                        &copy; 2026 <span class="text-red-500 font-semibold">TopDriveX</span>. Всички права запазени.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#" class="hover:text-red-500 transition">Поверителност</a>
                        <a href="#" class="hover:text-red-500 transition">Условия</a>
                        <a href="#" class="hover:text-red-500 transition">Cookies</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- ⚠️ IMPORTANT: Scripts section MUST be here -->
    @RenderSection("Scripts", required: false)

</body>
</html>
