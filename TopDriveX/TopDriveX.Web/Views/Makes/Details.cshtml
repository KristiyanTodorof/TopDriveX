@model TopDriveX.Application.Dtos.MakeDetailsDto

@{
    ViewData["Title"] = Model.Name;
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Breadcrumb -->
    <nav class="mb-6">
        <ol class="flex items-center space-x-2 text-sm text-gray-600">
            <li><a asp-controller="Home" asp-action="Index" class="hover:text-primary transition">Начало</a></li>
            <li class="text-gray-400">→</li>
            <li><a asp-controller="Makes" asp-action="Index" class="hover:text-primary transition">Марки</a></li>
            <li class="text-gray-400">→</li>
            <li class="text-gray-900 font-medium">@Model.Name</li>
        </ol>
    </nav>

    <!-- Make Header -->
    <div class="bg-primary text-white rounded-lg p-6 mb-8 shadow-lg">
        <div class="flex items-center justify-between flex-wrap gap-4">
            <div class="flex items-center space-x-4">
                @* @if (!string.IsNullOrEmpty(Model.LogoUrl))
                {
                    <img src="@Model.LogoUrl" alt="@Model.Name" class="w-20 h-20 object-contain filter brightness-0 invert" />
                }
                else
                {
                    <div class="text-6xl">🚗</div>
                } *@
                <div>
                    <h1 class="text-3xl font-bold mb-1">@Model.Name</h1>
                    @if (!string.IsNullOrEmpty(Model.Country))
                    {
                        <p class="text-red-100">📍 Произход: @Model.Country</p>
                    }
                </div>
            </div>
            <div class="bg-white text-primary rounded-lg px-6 py-3 text-center">
                <div class="text-sm font-medium">Налични модели</div>
                <div class="text-4xl font-bold">@Model.Models.Count</div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <!-- Active Ads -->
        <div class="bg-white border-2 border-primary rounded-lg p-6 text-center shadow-sm hover:shadow-lg transition-shadow">
            <div class="text-5xl mb-3">📊</div>
            <h5 class="text-gray-600 text-sm font-medium mb-2">Активни обяви</h5>
            <p class="text-5xl font-bold text-primary">@Model.ActiveAdvertisementsCount</p>
        </div>

        <!-- Average Price -->
        <div class="bg-white border-2 border-primary rounded-lg p-6 text-center shadow-sm hover:shadow-lg transition-shadow">
            <div class="text-5xl mb-3">💰</div>
            <h5 class="text-gray-600 text-sm font-medium mb-2">Средна цена</h5>
            <p class="text-5xl font-bold text-primary">
                @Model.AveragePrice.ToString("N0")
                <span class="text-2xl">лв</span>
            </p>
        </div>

        <!-- New Ads -->
        <div class="bg-white border-2 border-primary rounded-lg p-6 text-center shadow-sm hover:shadow-lg transition-shadow">
            <div class="text-5xl mb-3">🔥</div>
            <h5 class="text-gray-600 text-sm font-medium mb-2">Нови обяви</h5>
            <p class="text-5xl font-bold text-primary">@Model.NewAdvertisementsLast7Days</p>
            <span class="text-sm text-gray-600 mt-1 block">в последните 7 дни</span>
        </div>
    </div>

    <!-- Models Section Header -->
    <div class="flex justify-between items-center mb-6 flex-wrap gap-4">
        <h2 class="text-2xl font-bold text-gray-900">Модели @Model.Name</h2>
        <a asp-controller="Vehicles" asp-action="Index" asp-route-makeId="@Model.Id"
           class="bg-primary hover:bg-secondary text-white px-6 py-3 rounded-lg font-semibold transition inline-flex items-center space-x-2">
            <span>🔔</span>
            <span>Абонирай се за нови обяви</span>
        </a>
    </div>

    <!-- Models Grid -->
    @if (Model.Models.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var carModel in Model.Models)
            {
                <div class="bg-white border border-gray-200 rounded-lg p-5 hover:shadow-xl hover:border-primary transition-all duration-200">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <h5 class="text-lg font-semibold text-gray-900 mb-1">@carModel.Name</h5>
                            <p class="text-sm text-gray-600">
                                📅 @carModel.YearFrom@(carModel.YearTo.HasValue ? $" - {carModel.YearTo}" : " - сега")
                            </p>
                        </div>
                        
                    </div>
                    <a asp-controller="Vehicles" asp-action="Index"
                       asp-route-makeId="@Model.Id"
                       asp-route-modelId="@carModel.Id"
                       class="block w-full bg-primary hover:bg-secondary text-white text-center py-3 rounded-lg font-medium transition">
                        Виж обяви
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="bg-blue-50 border border-blue-200 text-blue-800 rounded-lg p-4 flex items-center space-x-2">
            <span class="text-xl">ℹ️</span>
            <span>Няма налични модели за тази марка.</span>
        </div>
    }

</div>
