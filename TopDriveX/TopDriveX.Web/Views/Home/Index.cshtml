@model IEnumerable<MakeDto>
@{
    ViewData["Title"] = "Начало";
    var vehicleTypes = ViewBag.VehicleTypes as IEnumerable<VehicleTypeDto>;
}

<!-- Hero Section -->
<div class="bg-gradient-to-r from-red-600 to-red-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
        <div class="text-center">
            <h1 class="text-6xl font-bold mb-6">Намерете перфектния автомобил</h1>
            <p class="text-2xl mb-12 text-red-100">Над 10,000 обяви от цяла България</p>

            <!-- Search Box -->
            <div class="max-w-5xl mx-auto">
                <form asp-controller="Home" asp-action="Search" method="get" class="bg-white rounded-2xl shadow-2xl p-8">
                    @if (TempData["SearchMessage"] != null)
                    {
                        <div class="mb-6 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
                            @TempData["SearchMessage"]
                        </div>
                    }

                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                        <div>
                            <label class="block text-gray-700 font-semibold mb-2 text-left">Марка</label>
                            <select name="makeId" class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500">
                                <option value="">Всички марки</option>
                                @foreach (var make in Model.OrderBy(m => m.Name))
                                {
                                    <option value="@make.Id">@make.Name</option>
                                }
                            </select>
                        </div>

                        <div>
                            <label class="block text-gray-700 font-semibold mb-2 text-left">Тип</label>
                            <select name="vehicleTypeId" class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500">
                                <option value="">Всички типове</option>
                                @if (vehicleTypes != null)
                                {
                                    @foreach (var type in vehicleTypes.OrderBy(t => t.Name))
                                    {
                                        <option value="@type.Id">@type.Name</option>
                                    }
                                }
                            </select>
                        </div>

                        <div>
                            <label class="block text-gray-700 font-semibold mb-2 text-left">Мин. цена (лв)</label>
                            <input type="number" name="minPrice" placeholder="От 0"
                                   class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500">
                        </div>

                        <div>
                            <label class="block text-gray-700 font-semibold mb-2 text-left">Макс. цена (лв)</label>
                            <input type="number" name="maxPrice" placeholder="До 100,000"
                                   class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500">
                        </div>
                    </div>

                    <div class="mt-6">
                        <button type="submit" class="w-full bg-red-600 text-white px-8 py-4 rounded-lg hover:bg-red-700 font-bold text-lg transition shadow-lg">
                            🔍 Търси автомобили
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="bg-white py-12 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
            <div>
                <div class="text-5xl font-bold text-red-600 mb-2">10,000+</div>
                <div class="text-gray-600 font-medium">Активни обяви</div>
            </div>
            <div>
                <div class="text-5xl font-bold text-red-600 mb-2">@Model.Count()</div>
                <div class="text-gray-600 font-medium">Марки автомобили</div>
            </div>
            <div>
                <div class="text-5xl font-bold text-red-600 mb-2">50,000+</div>
                <div class="text-gray-600 font-medium">Доволни клиенти</div>
            </div>
            <div>
                <div class="text-5xl font-bold text-red-600 mb-2">24/7</div>
                <div class="text-gray-600 font-medium">Поддръжка</div>
            </div>
        </div>
    </div>
</div>

<!-- Popular Makes -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="flex justify-between items-center mb-8">
        <h2 class="text-4xl font-bold text-gray-900">Популярни марки</h2>
        <a asp-controller="Makes" asp-action="Index" class="text-red-600 hover:text-red-700 font-semibold flex items-center">
            Виж всички
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </a>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
        @foreach (var make in Model.Take(12))
        {
            <a asp-controller="Makes" asp-action="Details" asp-route-id="@make.Id"
               class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all p-8 text-center border-2 border-transparent hover:border-red-500 group">
                <div class="text-5xl mb-4 group-hover:scale-110 transition-transform">🚗</div>
                <h3 class="font-bold text-gray-900 text-lg group-hover:text-red-600 transition">@make.Name</h3>
                <p class="text-sm text-gray-500 mt-2">Виж обяви</p>
            </a>
        }
    </div>
</div>

<!-- Featured Listings -->
<div class="bg-gray-100 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-gray-900 mb-8">Препоръчани обяви</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            @for (int i = 0; i < 3; i++)
            {
                <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition">
                    <div class="h-48 bg-gradient-to-br from-red-400 to-red-600 flex items-center justify-center">
                        <span class="text-white text-6xl">🚗</span>
                    </div>
                    <div class="p-6">
                        <div class="flex justify-between items-start mb-3">
                            <h3 class="text-xl font-bold text-gray-900">BMW X5 2020</h3>
                            <span class="bg-red-100 text-red-600 px-3 py-1 rounded-full text-sm font-semibold">VIP</span>
                        </div>
                        <p class="text-gray-600 mb-4">Дизел • Автоматик • 45,000 км</p>
                        <div class="flex justify-between items-center">
                            <span class="text-3xl font-bold text-red-600">45,000 лв</span>
                            <button class="bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition">
                                Виж повече
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

