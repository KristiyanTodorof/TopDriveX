@model IEnumerable<MakeDto>
@{
    ViewData["Title"] = "Начало";
    var vehicleTypes = ViewBag.VehicleTypes as IEnumerable<VehicleTypeDto>;
}

<!-- Hero Section -->
<div class="bg-gradient-to-r from-red-600 to-red-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
        <div class="text-center">
            <h1 class="text-6xl font-bold mb-6">Намерете перфектния автомобил</h1>
            <p class="text-2xl mb-12 text-red-100">Над 10,000 обяви от цяла България</p>

            <!-- Search Box -->
            <div class="max-w-5xl mx-auto">
                <div class="bg-white rounded-2xl shadow-2xl p-8">
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                        <div>
                            <label class="block text-gray-900 font-bold mb-2 text-left">Марка</label>
                            <select id="searchMakeId" class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 text-gray-900 font-medium">
                                <option value="">Всички марки</option>
                                @foreach (var make in Model.OrderBy(m => m.Name))
                                {
                                    <option value="@make.Id">@make.Name</option>
                                }
                            </select>
                        </div>

                        <div>
                            <label class="block text-gray-900 font-bold mb-2 text-left">Тип</label>
                            <select id="searchVehicleType" class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 text-gray-900 font-medium">
                                <option value="">Всички типове</option>
                                @if (vehicleTypes != null)
                                {
                                    @foreach (var type in vehicleTypes.OrderBy(t => t.Name))
                                    {
                                        <option value="@type.Id">@type.Name</option>
                                    }
                                }
                            </select>
                        </div>

                        <div>
                            <label class="block text-gray-900 font-bold mb-2 text-left">Мин. цена (лв)</label>
                            <input type="number" id="searchMinPrice" placeholder="От 0"
                                   class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 text-gray-900 font-medium placeholder-gray-500">
                        </div>

                        <div>
                            <label class="block text-gray-900 font-bold mb-2 text-left">Макс. цена (лв)</label>
                            <input type="number" id="searchMaxPrice" placeholder="До 100,000"
                                   class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 text-gray-900 font-medium placeholder-gray-500">
                        </div>
                    </div>

                    <div class="mt-6">
                        <button onclick="searchVehicles()" class="w-full bg-red-600 text-white px-8 py-4 rounded-lg hover:bg-red-700 font-bold text-lg transition shadow-lg">
                            🔍 Търси автомобили
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="bg-white py-12 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
            <div>
                <div class="text-5xl font-bold text-red-600 mb-2">10,000+</div>
                <div class="text-gray-600 font-medium">Активни обяви</div>
            </div>
            <div>
                <div class="text-5xl font-bold text-red-600 mb-2">@Model.Count()</div>
                <div class="text-gray-600 font-medium">Марки автомобили</div>
            </div>
            <div>
                <div class="text-5xl font-bold text-red-600 mb-2">50,000+</div>
                <div class="text-gray-600 font-medium">Доволни клиенти</div>
            </div>
            <div>
                <div class="text-5xl font-bold text-red-600 mb-2">24/7</div>
                <div class="text-gray-600 font-medium">Поддръжка</div>
            </div>
        </div>
    </div>
</div>

<!-- Popular Makes -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="flex justify-between items-center mb-8">
        <h2 class="text-4xl font-bold text-gray-900">Популярни марки</h2>
        <a asp-controller="Makes" asp-action="Index" class="text-red-600 hover:text-red-700 font-semibold flex items-center">
            Виж всички
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </a>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
        @foreach (var make in Model.Take(12))
        {
            <a asp-controller="Makes" asp-action="Details" asp-route-id="@make.Id"
               class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all p-8 text-center border-2 border-transparent hover:border-red-500 group">
                <div class="text-5xl mb-4 group-hover:scale-110 transition-transform">🚗</div>
                <h3 class="font-bold text-gray-900 text-lg group-hover:text-red-600 transition">@make.Name</h3>
                <p class="text-sm text-gray-500 mt-2">Виж обяви</p>
            </a>
        }
    </div>
</div>

<!-- Modal -->
<div id="searchModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-6xl w-full max-h-[90vh] overflow-hidden flex flex-col">
        <!-- Modal Header -->
        <div class="bg-gradient-to-r from-red-600 to-red-800 text-white p-6 flex justify-between items-center">
            <div>
                <h2 class="text-3xl font-bold mb-2">Резултати от търсенето</h2>
                <p id="resultsCount" class="text-red-100">Намерени: 0 автомобила</p>
            </div>
            <button onclick="closeModal()" class="text-white hover:bg-white/20 rounded-full p-2 transition">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <!-- Modal Body -->
        <div class="flex-1 overflow-y-auto p-6">
            <div id="loadingSpinner" class="text-center py-12 hidden">
                <div class="inline-block animate-spin rounded-full h-16 w-16 border-t-4 border-b-4 border-red-600"></div>
                <p class="mt-4 text-gray-600 text-lg">Търсене...</p>
            </div>

            <div id="searchResults" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Results will be inserted here -->
            </div>

            <div id="noResults" class="hidden text-center py-12">
                <div class="text-6xl mb-4">😔</div>
                <p class="text-gray-600 text-xl mb-4">Няма намерени автомобили с тези критерии</p>
                <button onclick="closeModal()" class="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 transition">
                    Промени критериите
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    async function searchVehicles() {
        const makeId = document.getElementById('searchMakeId').value;
        const minPrice = document.getElementById('searchMinPrice').value;
        const maxPrice = document.getElementById('searchMaxPrice').value;

        // Build query parameters
        const params = new URLSearchParams();
        if (makeId) params.append('makeId', makeId);
        if (minPrice) params.append('priceFrom', minPrice);
        if (maxPrice) params.append('priceTo', maxPrice);

        // Show modal and loading
        const modal = document.getElementById('searchModal');
        const loading = document.getElementById('loadingSpinner');
        const resultsDiv = document.getElementById('searchResults');
        const noResults = document.getElementById('noResults');

        modal.classList.remove('hidden');
        loading.classList.remove('hidden');
        resultsDiv.innerHTML = '';
        noResults.classList.add('hidden');

        try {
            const response = await fetch(`/Vehicles/Search?${params.toString()}`);
            const vehicles = await response.json();

            loading.classList.add('hidden');

            if (vehicles.length === 0) {
                noResults.classList.remove('hidden');
                document.getElementById('resultsCount').textContent = 'Намерени: 0 автомобила';
            } else {
                document.getElementById('resultsCount').textContent = `Намерени: ${vehicles.length} автомобила`;

                vehicles.forEach(vehicle => {
                    const card = createVehicleCard(vehicle);
                    resultsDiv.innerHTML += card;
                });
            }
        } catch (error) {
            console.error('Error searching vehicles:', error);
            loading.classList.add('hidden');
            resultsDiv.innerHTML = '<div class="col-span-3 text-center text-red-600 py-12">Грешка при търсенето. Моля, опитайте отново.</div>';
        }
    }

    function createVehicleCard(vehicle) {
        const imageUrl = vehicle.mainImage || 'https://placehold.co/400x300/red/white?text=Car';

        return `
                <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition overflow-hidden">
                    <div class="relative h-48 overflow-hidden group">
                        <img src="${imageUrl}" alt="${vehicle.makeName} ${vehicle.modelName}"
                             class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300">
                        <div class="absolute top-3 right-3 bg-red-600 text-white px-3 py-1 rounded-full text-sm font-bold shadow-lg">
                            ${vehicle.year} г.
                        </div>
                    </div>
                    <div class="p-5">
                        <div class="mb-4">
                            <h3 class="text-xl font-bold text-gray-900 mb-1">${vehicle.makeName} ${vehicle.modelName}</h3>
                            <p class="text-gray-500 text-sm">${vehicle.city}</p>
                        </div>

                        <div class="grid grid-cols-2 gap-3 mb-4 text-sm">
                            <div class="flex items-center text-gray-700">
                                <span class="mr-2 text-lg">🛣️</span>
                                <div>
                                    <p class="text-xs text-gray-500">Пробег</p>
                                    <p class="font-semibold">${vehicle.mileage.toLocaleString()} км</p>
                                </div>
                            </div>
                            <div class="flex items-center text-gray-700">
                                <span class="mr-2 text-lg">📅</span>
                                <div>
                                    <p class="text-xs text-gray-500">Година</p>
                                    <p class="font-semibold">${vehicle.year}</p>
                                </div>
                            </div>
                        </div>

                        <div class="border-t border-gray-200 pt-4 flex justify-between items-center">
                            <div>
                                <p class="text-xs text-gray-500 mb-1">Цена</p>
                                <p class="text-2xl font-bold text-red-600">${vehicle.price.toLocaleString()} лв</p>
                            </div>
                            <button onclick="window.location.href='/Vehicles/Details/${vehicle.id}'"
                                    class="bg-red-600 text-white px-5 py-2.5 rounded-lg hover:bg-red-700 transition text-sm font-semibold shadow-md hover:shadow-lg">
                                Виж детайли
                            </button>
                        </div>
                    </div>
                </div>
            `;
    }

    function closeModal() {
        document.getElementById('searchModal').classList.add('hidden');
    }

    // Close modal on Escape key
    document.addEventListener('keydown', function (event) {
        if (event.key === 'Escape') {
            closeModal();
        }
    });

    // Close modal on background click
    document.getElementById('searchModal').addEventListener('click', function (event) {
        if (event.target === this) {
            closeModal();
        }
    });
</script>